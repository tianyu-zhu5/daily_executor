{
  "description": "自动化推送脚本配置文件",
  "version": "1.0.0",

  "server_sauce": {
    "description": "Server酱多人推送配置",
    "recipients": [
      {
        "name": "张三",
        "sendkey": "SCT123xxx请替换为实际的SendKey",
        "enabled": true
      },
      {
        "name": "李四",
        "sendkey": "SCT456xxx请替换为实际的SendKey",
        "enabled": true
      }
    ]
  },

  "signal_generation": {
    "description": "信号生成配置",
    "db_path": "../CCI_Divergence/data/cci_signals.db",
    "data_dir": "../CCI_Divergence/data/daily",
    "stock_pool_file": "../CCI_Divergence/stock_pools/hs300.txt",
    "output_file": "./signals/daily_signals.csv",
    "min_confidence": 0.1,
    "use_next_day_open": true
  },

  "cci_update": {
    "description": "CCI底背离更新配置",
    "local_db_path": "./data/cci_signals.db",
    "data_dir": "../data/daily",
    "cci_period": 20,
    "pivot_window": 10,
    "divergence_validity_days": 20,
    "timeout_seconds": 600
  },

  "data_update": {
    "description": "数据更新配置",
    "script_path": "../data/stock_data_manager.py",
    "timeout_seconds": 1800
  },

  "filter_conditions": {
    "description": "信号过滤条件（自定义）",
    "min_confidence": 0.1,
    "max_signals_per_day": null,
    "exclude_stocks": []
  },

  "push_settings": {
    "description": "推送设置",
    "include_stock_name": true,
    "stock_name_cache": "../data/stock_list.txt",
    "message_format": "markdown",
    "push_on_no_signals": false
  },

  "logging": {
    "description": "日志配置",
    "log_dir": "./logs",
    "log_level": "INFO",
    "keep_days": 30
  },

  "execution": {
    "description": "执行配置",
    "stop_on_error": true,
    "retry_count": 0
  }
}
